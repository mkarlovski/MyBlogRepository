@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@*@model List<MyBlog.Models.Blog>;*@
@model List<MyBlog.Data.Blog>;

@{
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<div id="container-left">

    @foreach (var blog in @Model)
        {
    <div class="card1">
        <div id="content-left">
            @*<img src="https://mk0knowtechie1qof48y.kinstacdn.com/wp-content/uploads/2020/02/samsung-galaxy-s20-1536x864.jpg" style="width:350px;" />*@
            <a asp-controller="Home" asp-action="ViewFullBlog" asp-route-id="@blog.BlogID"><img src=@blog.ImageURL style="width:350px;" /></a>
        </div>
        <div id="content-right" style="background-color:red; width:350px; padding-left:10px;">
            <div class="info-top">
                <h6 style="background-color:green;">
                    <a asp-controller="Home" asp-action="Index">@blog.Section</a>
                </h6>
                <h4><a asp-controller="Home" asp-action="ViewFullBlog" asp-route-id="@blog.BlogID">@blog.Title</a></h4>
                <h6>@blog.BlogNote</h6>

            </div>
        </div>
    </div>
        }

</div>
<div id="container-right">


</div>