@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@*@model List<MyBlog.Data.Blog>;*@
@model List<MyBlog.ViewModels.ModifyOverviewModel>;

@{
    Layout = "_Layout";
    ViewBag.Title = "ModifyOverview";
}

<div class="form-group">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Create">Add new blog</a>
</div>

<table class="table" style="margin-top:20px;">
    <thead>
        <tr>
            <td>Blog</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in @Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td><a asp-controller="Home" asp-action="Modify" asp-route-id="@blog.BlogID"> Modify</a> | <a asp-controller="Home" asp-action="Delete" asp-route-id="@blog.BlogID" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</a></td>
            </tr>
        }
    </tbody>
</table>