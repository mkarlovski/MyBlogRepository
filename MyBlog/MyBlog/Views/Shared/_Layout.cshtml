@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/app.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>

    <div id="main-container">
        <div id="logo-container">
            <div id="header-logo">My First Tech Blog</div>
            <div id="connectUs">Connect with us</div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">TechBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-route-id="">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-route-section="Gadgets">Gadgets<span class="sr-only">(current)</span></a>
                    </li>    @*da se dosredi*@
                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-route-section="HowTo">How-To<span class="sr-only">(current)</span></a>
                    </li>    @*da se dosredi*@
                    @*<li class="nav-item">
            <a class="nav-link" asp-controller="Info" asp-action="AboutUs">About Us</a>
        </li>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ModifyOverview">Modify Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="SignOut">Sign Out</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="SignIn">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="SignUp">Sign Up</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Info" asp-action="ContactMe">Contact Us</a>
                    </li>
                    @*<li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Create">Create Post</a>
        </li>*@

                </ul>
            </div>
        </nav>
    </div>

    <div class="container" style="margin-top:20px">
        @RenderBody()
    </div>
</body>
</html>
